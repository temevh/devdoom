generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  source    Source
  url       String   @unique
  tags      String[]
  createdAt DateTime @default(now())
}

enum Source {
  reddit
  medium
  hackernews
}

model User {
  id     Int      @id @default(autoincrement())
  email  String   @unique
  topics Topics[]
}

enum Topics {
  ai
  coding
  productivity
}
