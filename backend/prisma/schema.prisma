generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  source    Source
  url       String
  tags      String[]
  createdAt DateTime @default(now())
}

enum Source {
  reddit
}
