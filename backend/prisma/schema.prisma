generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  source    Source
  url       String   @unique
  tags      String[]
  createdAt DateTime @default(now())
}

model Topic {
  id          Int    @id @default(autoincrement())
  name        Topics
  description String
}

enum Source {
  reddit
  medium
  hackernews
}

model User {
  id     Int      @id @default(autoincrement())
  email  String   @unique
  topics Topics[]
}

enum Topics {
  ai
  coding
  productivity
  backend
  frontend
  mobile
  devops
  PHP
  Python
  Ruby
  Javascript
  low_level_and_systems
  jvm_and_dotnet
  functional_and_niche_langs
  databases
  os_and_platforms
  terminal_and_shell
  data_science_and_ai
  cs_theory_and_career
  web_design_and_ui
  security_and_networking
  browsers
  hardware_and_iot
  culture_and_humor
  general_dev_learning
}
